<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="120dp"
    android:id="@+id/add_register_layout"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_main_ask_add"
        android:id="@+id/title_main_add_ask"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/add_book_button"
        android:id="@+id/agrega_libro"
        android:layout_alignParentRight="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/add_customer_button"
        android:id="@+id/agrega_cliente"
        android:layout_alignParentLeft="true" />
</RelativeLayout>